@page "/"
@layout ArcHome
@inject NavigationManager Link

<div class="arc-content-subsection">Vælg applikation</div>
<button type="button" class="arc-box-small" @onclick="@LinkHomeMetadata">Metadata</button>
<button type="button" class="arc-box-small" @onclick="@LinkHomeRegneark">Regneark</button>
<button type="button" class="arc-box-small" @onclick="@LinkHomeSurveyData">Survey data</button>

<p></p>

<div class="arc-content-subsection">Vedrørende din brug</div>
<button type="button" class="arc-box-small" @onclick="@LinkServicevilkaar">Servicevilkår</button>
<button type="button" class="arc-box-small" @onclick="@LinkDatabeskyttelse">Databeskyttelse</button>

@code {
    public void LinkHomeMetadata()
    {
        Link.NavigateTo("Metadata/HomeMetadata");
    }
        public void LinkHomeRegneark()
    {
        Link.NavigateTo("Regneark/HomeRegneark");
    }
    public void LinkHomeSurveyData()
    {
        Link.NavigateTo("SurveyData/HomeSurveyData");
    }
    public void LinkServicevilkaar()
    {
        Link.NavigateTo("Servicevilkaar");
    }
    public void LinkDatabeskyttelse()
    {
        Link.NavigateTo("Databeskyttelse");
    }
}
